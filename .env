# Server settings
PORT=3000

# Puppeteer/Chrome memory optimization
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
CHROMIUM_FLAGS=--disable-dev-shm-usage --disable-gpu --no-sandbox --disable-setuid-sandbox --no-zygote --single-process --disable-extensions --disable-software-rasterizer --js-flags="--max-old-space-size=256"

# Request optimization
# Set to false in production
DEBUG=false

# Memory management
NODE_OPTIONS=--max-old-space-size=256 